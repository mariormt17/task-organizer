%h1= t('tasks.listing_tasks')

%table
  %thead
    %tr
      %th= t('tasks.form.name')
      %th= t('tasks.form.description')
      %th= t('tasks.form.due_date')
      %th= t('tasks.form.category')
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.name
        %td= task.description
        %td= task.due_date
        %td= task.category.name
        %td= link_to t('common.show'), task
        %td= link_to t('common.edit'), edit_task_path(task)
        %td= link_to t('common.destroy'), task, :method => :delete, :data => { :confirm => t('common.r_u_sure') }

%br

= link_to t('tasks.new_task'), new_task_path

<%- if @note.persisted? %>
  var parentNode = document.querySelector(".notes_container .notes")
  var div = document.createElement("div")
  div.classList.add("note-element");
  div.innerHTML = "<%= j render'tasks/notes/note.html.haml', note: @note %>"
  parentNode.appendChild(div)
  document.getElementById("note_body").value = "";
  window.scrollTo({
    top: window.innerHeight,
    behavior: "smooth"
  });
<% end %>